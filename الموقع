    <script>
        function startSetup() {
            const consoleBox = document.getElementById('console');
            const newLine = document.createElement('p');
            newLine.innerText = "[SYSTEM] جاري البحث عن السكربت في جهازك...";
            newLine.style.color = "#fbbf24";
            consoleBox.appendChild(newLine);
            alert("تأكد من تحميل وتشغيل ملف start.bat أولاً ليرتبط المتصفح بجهازك!");
        }
